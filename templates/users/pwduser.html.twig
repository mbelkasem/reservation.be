{% extends 'base.html.twig' %}

{% block title %}Modification utilisateur{% endblock %}

{% block body %}
    {% include 'includes/header.html.twig' %}
  

    <section class="vh-100" style="background-color: #9de2ff;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <img src="{{ asset('images/user.png') }}" alt="Generic placeholder image" class="img-fluid" style="width: 180px; border-radius: 10px;">

                <div class="col col-md-9 col-lg-7 col-xl-5">
                    <h6 style="text-align:center;">Modification du mot de passe</h6>
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-4">
                            {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.password.first, 'Nouveau mot de passe') }}
                                    {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.password.second, 'Confirmation du nouveau mot de passe') }}
                                    {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmation du nouveau mot de passe'}}) }}
                                </div>
                                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

