{% extends 'base.html.twig' %} 

{% block title %}Modification utilisateur{% endblock %} 

{% block body %} 
    {% include 'includes/header.html.twig' %}
        
    <section class="vh-100" style="background-color: #9de2ff;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <img src="{{ asset('images/user.png') }}" alt="Generic placeholder image" class="img-fluid" style="width: 180px; border-radius: 10px;">
               
                <div class="col col-md-9 col-lg-7 col-xl-5">
                    <h6 style="text-align:center;">Modification de {{ app.user.firstname }} {{ app.user.lastname }}</h6>
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-4">
                            {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.login, 'Login') }}
                                {{ form_widget(form.login, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.login) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.lastname, 'Nom') }}
                                {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.lastname) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.firstname, 'Pr√©nom') }}
                                {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.firstname) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.email, 'Email') }}
                                {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.language, 'Langue') }}
                                {{ form_widget(form.language, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.language) }}
                                <br>
                            </div>                         
                            <div class="col d-flex flex-column justify-content-end mb-3">
                                {{ form_row(form.Valider, { 'attr': {'class': 'btn btn-primary mb-3  w-100'} }) }}
                                <a href="{{ path('user_profil') }}" class="btn btn-secondary">Retour</a>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
